FROM ##from_image##
MAINTAINER dave booz <booz@us.ibm.com>

ENV GOPATH=/go
ENV mtn_contractpath=/contracts/

RUN apk update && apk add bash ca-certificates

# Copy only critical pieces into execution container
COPY /docker-exec/fs/bin /bin
COPY /docker-exec/fs/contracts /contracts
COPY /docker-exec/fs/usr/local/bin /usr/local/bin

CMD ["/usr/local/bin/start"]
